{
	"$schema": "./node_modules/oxfmt/configuration_schema.json",
	"printWidth": 80,
	"useTabs": true,
	"tabWidth": 4,
	"experimentalSortImports": {
		"groups": [
			"external",
			"convex",
			"shared",
			"internal",
			"sibling",
			"style"
		],
		"customGroups": [
			{
				"groupName": "convex",
				"elementNamePattern": ["@/convex/", "./_generated/"]
			},
			{
				"groupName": "shared",
				"elementNamePattern": ["@/shared/"]
			}
		]
	},
	"ignorePatterns": []
}
